<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupItem_wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68000000"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@drawable/more_item_round_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wallpaper_lock_screen_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins_medium"
                android:padding="10dp"
                android:text="Set as lock screen"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wallpaper_home_screen_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:fontFamily="@font/poppins_medium"
                android:padding="12dp"
                android:text="Set as home screen"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wallpaper_set_both_screen_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:fontFamily="@font/poppins_medium"
                android:padding="12dp"
                android:text="Set both"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
